(defwidget bar []
  (centerbox :orientation "h" :class "bar"
    (left)
    (center)
    (right)))

(defwindow bar
  :monitor 0
  :namespace 'eww-bar'
  :geometry (geometry :x "0%"
                      :y "0px"
                      :width "100%"
                      :height "2%"
                      :anchor "bottom center")
  :stacking "fg"
  :exclusive true
  :focusable false
  (bar))
